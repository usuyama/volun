<div id="main">
    <h1 class="title">タグ編集</h1>
	
		<% form_for @tag, :html => { :multipart => true } do |f| %>
		  <%= f.error_messages %>
		
		  <p>
		  <%= f.label :name %><br />
		  <%= f.text_field :name %>
		  </p>
		  <p>
		  <%= f.label :icon %><br />
		  <%= f.file_field :icon %>
		  </p>
		  <p>
		  <%= f.submit 'Update' %>
		  </p>
		<% end %>
		
		<%= link_to 'Show', @tag %> |
		<%= link_to 'Back', tags_path %>
</div><!-- /#main -->
