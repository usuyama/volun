<h1>New tag</h1>

<% form_for @tag, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :icon %><br />
  <%= f.file_field :icon %>
  </p>

  <p>
  <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', tags_path %>
