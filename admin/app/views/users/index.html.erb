<div id="main">
    <h1 class="title">ユーザー</h1>
	<table class="list-table">
	    <tr>
		    <th>アカウント名</th>
			<th>メール</th>
			<th>&nbsp</th>
		</tr>
      <% @users.each do |user| %>
        <tr>
            <td><%=h user.login %></td>
            <td><%=h user.email %></td>
			<td class="right">
                <%= link_to '表示', user %>
				<%= link_to '編集', edit_user_path(user) %>
				<%= link_to '削除', user, :confirm => 'Are you sure?', :method => :delete %>
			</td>
        </tr>
      <% end %>
    </table>
	<p class="btn-area"><%= link_to 'ユーザー新規作成', new_user_path %></p>
</div><!-- /#main -->

