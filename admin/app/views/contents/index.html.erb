<h1>Listing contents</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Summary</th>
    <th>Display</th>
    <th>Banner</th>
    <th>Type</th>
    <th>Customer</th>
    <th>Banner size</th>
    <th>Publish at</th>
    <th>Close at</th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%=h content.title %></td>
    <td><%=h content.body %></td>
    <td><%=h content.summary %></td>
    <td><%=h content.display %></td>
    <td><%=h content.banner_id %></td>
    <td><%=h content.content_type %></td>
    <td><%=h content.customer_id %></td>
    <td><%=h content.banner_size_id %></td>
    <td><%=h content.publish_at %></td>
    <td><%=h content.close_at %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

