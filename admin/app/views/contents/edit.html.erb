<h1>Editing content</h1>

<% form_for(@content, :html => { :multipart => true })do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
<% for content_image in @content.content_images %>
<% fields_for "content[content_image_attributes][]", content_image do |f2| %>
<p>
コンテンツで使う画像：<%= f2.file_field :content_image %>
</p>
<% end %>
<% end %>

  <p>
  <%= f.label "コンテンツのバナー" %><br />
  <%= f.file_field :banner %>
</p>
<p>
    <%= f.label :display %><br />
    <%= f.check_box :display %>
  </p>
  <p>
    <%= f.label :banner_id %><br />
    <%= f.text_field :banner_id %>
  </p>
  <p>
    <%= f.label "特集記事" %><br />
    <%= f.check_box :content_type %>
  </p>
  <p>
    <%= f.label :customer_id %><br />
    <%= f.text_field :customer_id %>
  </p>
  <p>
    <%= f.label :banner_size_id %><br />
    <%= f.text_field :banner_size_id %>
  </p>
  <p>
    <%= f.label :publish_at %><br />
    <%= f.datetime_select :publish_at %>
  </p>
  <p>
    <%= f.label :close_at %><br />
    <%= f.datetime_select :close_at %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

