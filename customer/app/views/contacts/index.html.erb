<h1>Listing contacts</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Email</th>
    <th>Name</th>
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%=h contact.body %></td>
    <td><%=h contact.email %></td>
    <td><%=h contact.name %></td>
    <td><%= link_to 'Show', contact %></td>
  </tr>
<% end %>
</table>

