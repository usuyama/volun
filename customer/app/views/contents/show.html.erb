<p>
  <b>タイトル:</b>
  <%=h @content.title %>
</p>

<p>
  <b>内容:</b>
  <%=h @content.body %>
</p>
<% for content_image in @content.content_images %>
  <p>
    <%= image_tag content_image.data.url(:thumb), :alt => "" %>
    <%= h content_image.data.url(:original) %>
    </p>
  <% end %>
<p>
  <b>表示するかどうか:</b>
  <%=h @content.display %>
</p>

<p>
  <b>Banner:</b>
  <%=h @content.banner_id %>
</p>

<p>
  <b>Banner size:</b>
  <%=h @content.banner_size_id %>
</p>

<p>
  <b>Publish at:</b>
  <%=h @content.publish_at %>
</p>

<p>
  <b>Close at:</b>
  <%=h @content.close_at %>
</p>

<%= image_tag @content.banner.url(:small) %>


<%= link_to '編集', edit_customer_content_path(current_customer,@content) %> |
<%= link_to '戻る', customer_contents_path %>
