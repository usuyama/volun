  <%= f.label "コンテンツのバナー" %><br />
  <%= f.file_field :banner %>
</p>
<%= f.label :tag%>
<% for tag in Tag.find(:all) %>
  <div>
    <%= check_box_tag "content[tag_ids][]", tag.id, @content.tags.include?(tag)\
 %>
    <%= tag.name %>
  </div>
<% end %>
