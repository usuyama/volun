<% form_for :contact, @contact, :url => contact_path do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <div>
    <%= f.hidden_field :content_id, :value => @contact.content_id %>
  </div>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
