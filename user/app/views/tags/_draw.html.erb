function draw()
{
context2D.clearRect(0, 0, canvas.width, canvas.height);

<% draw.each_with_index do |content, i| %>
  context2D.drawImage(image<%= content.id %>, cell_width * <%= (i % 3) %>, cell_height * <%= (i / 3) %> + y);
  context2D.drawImage(image<%= content.id %>, cell_width * <%= (i % 3) %>, cell_height * <%= (i / 3) %> + y + loop);
<% end %>

<% (draw.count % 3).times do |i| %>
  //    context2D.drawImage(image<%= i %>, cell_width * <%= 2 - i %>, cell_height * <%= (draw.count / 3) %> + y);
  //    context2D.drawImage(image<%= i %>, cell_width * <%= 2 - i %>, cell_height * <%= (draw.count / 3) %> + y + loop);
<% end %>

y += 2 * yDirection;

if (y <= - loop)
{
y = 0;
}
}
